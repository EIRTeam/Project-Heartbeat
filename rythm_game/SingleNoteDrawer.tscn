code = "shader_type canvas_item;
const float PI = 3.14159265358979323846264;

uniform vec4 color_start : hint_color;
uniform vec4 color_end : hint_color;
uniform float time;
uniform float thickness;
uniform float frequency;
uniform float amplitude;
uniform float margin;
uniform bool leading_enabled;
vec4 get_color(float t) {
	return mix(color_start, color_end, clamp(t, 0.0, 1.0));
}

float udCos( in vec2 p, in float a, in float b, in float c, in float d )
{
    // convert all data to a primitive cosine wave
    p = c*(p-vec2(d,a));

    // reduce to principal half cycle
    const float TPI = 6.28318530718;
    p.x = mod( p.x, TPI); if( p.x>(0.5*TPI) ) p.x = TPI - p.x;

    // find zero of derivative (minimize distance)
    float xa = 0.0, xb = TPI;
    for( int i=0; i<24; i++ ) // 24 bit precision
    {
        float x = 0.5*(xa+xb);
        float y = x-p.x+b*c*sin(x)*(p.y-b*c*cos(x));
        if( y<0.0 ) xa = x; else xb = x;
    }
    float x = 0.5*(xa+xb);
    
    // compute distance    
    vec2 q = vec2(x,b*c*cos(x));
    return length(p-q)/c;
}
const vec3 P1ColorIn = vec3(1.0, 0.5, 0.0);
const vec3 P1ColorOut = vec3(1.0, 0.0, 0.0);
void fragment() {
	vec2 uv = UV - vec2(0.0, 0.5);
	
	vec2 p = UV;
	
	float scaled_amplitude = (amplitude / 12.0) / 1080.0;
	float ca = 0.5; // offset    (y position)
    float cb = -scaled_amplitude; // amplitude (y scale)
	
	float freq = frequency * 2.0;
	
    float cc = ((abs(freq) * 6.28318530718) / 2.0); // frequency (x scale)
    float cd = 0.0; // phase     (x position)
	p.x += (((1.0/freq) / PI) * (PI / 2.0));
	float d = udCos( p, ca, cb, cc, cd);
	float d2 = udCos( p, ca, cb*0.7, cc, cd);
	float lineAShape = smoothstep(1.0 - clamp(d, 0.0, 1.0), 1.0, 1.0 - thickness);
	float lineBShape = smoothstep(1.0 - clamp(d2, 0.0, 1.0), 1.0, 1.0 - thickness);
	
	float color_x = clamp((UV.x - 0.5) / 0.5, 0.0, 1.0);
	
	vec4 lineACol = (1.0 - lineAShape) * get_color(color_x);
	vec4 lineBCol = (1.0 - lineBShape) * get_color(color_x);
	float t = 0.5 + time / 2.0;
	COLOR = lineACol;
	if (UV.x <= t - margin) {
		if (leading_enabled) {
			vec4 c = get_color(0.0);
			c.a = 0.5 * (1.0 - time);
			COLOR = (1.0 - lineAShape) * c;
			if (UV.x < 0.5) {
				discard;
			}
		} else {
			discard;
		}
	} 
	if (UV.x >= t) {
		COLOR += lineBCol * (1.0 - COLOR.a);
	}
	if (UV.x >= t - margin && UV.x <= t + margin) {
		discard;
	}
}"

