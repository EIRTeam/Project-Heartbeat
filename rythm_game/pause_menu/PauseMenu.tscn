code = "shader_type canvas_item;

uniform float radius = 9.0;

void fragment() {
	vec2 px = SCREEN_PIXEL_SIZE;
	float i = -radius;
	vec4 col = vec4(0.0);
	float n = 0.0015;
	float weight;
	float norm;
	
	for (i = -radius; i <= radius; i++) {
		col += texture(SCREEN_TEXTURE, SCREEN_UV + px * vec2(i, 0.0)) * n;
		if (i <= 0.0) {
			n += 0.0015;
		}
		if (i > 0.0) {
			n -= 0.0015;
		}
		weight += n;
	}
	norm = 1.0/weight;
	
	COLOR = col * norm;
}"

